@if ($errors->any())
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": true,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "10",
                    "hideDuration": "1000",
                    "timeOut": "0",
                    "extendedTimeOut": "0",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };
                @foreach ($errors->all() as $error)
                toastr.error("{!! $error !!}", 'Error' );
                @endforeach
            }, 400);
        </script>
    @endpush
@elseif (session()->get('flash_success'))
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };
                @if(is_array(json_decode(session()->get('flash_success'), true)))
                toastr.success( "{!! implode('', session()->get('flash_success')->all(':message<br/>')) !!}", 'Success');
                @else
                toastr.success("{!! session()->get('flash_success') !!}", 'Success');
                @endif
            }, 400);
        </script>
    @endpush

@elseif (session()->get('flash_warning'))
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };
                @if(is_array(json_decode(session()->get('flash_warning'), true)))
                toastr.warning("{!! implode('', session()->get('flash_warning')->all(':message<br/>')) !!}", 'Warning');
                @else
                toastr.warning("{!! session()->get('flash_warning') !!}", 'Warning');
                @endif
            }, 400);
        </script>
    @endpush
@elseif (session()->get('flash_info'))
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };

                @if(is_array(json_decode(session()->get('flash_info'), true)))
                toastr.info("{!! implode('', session()->get('flash_info')->all(':message<br/>')) !!}", 'Information');
                @else
                toastr.info( "{!! session()->get('flash_info') !!}", 'Information');
                @endif
            }, 400);
        </script>
    @endpush
@elseif (session()->get('flash_danger'))
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    "timeOut": "0",
                    "extendedTimeOut": "0"
                };

                @if(is_array(json_decode(session()->get('flash_danger'), true)))
                toastr.error("{!! implode('', session()->get('flash_danger')->all(':message<br/>')) !!}", 'Error');
                @else
                toastr.error("{!! session()->get('flash_danger') !!}", 'Error');
                @endif
            }, 500);
        </script>
    @endpush
@elseif (session()->get('flash_message'))
    @push('after-scripts')
        <script>
            setTimeout(function() {
                toastr.options = {
                    closeButton: true,
                    progressBar: true,
                    showMethod: 'slideDown',
                    timeOut: 4000
                };

                @if(is_array(json_decode(session()->get('flash_message'), true)))
                toastr.info("{!! implode('', session()->get('flash_message')->all(':message<br/>')) !!}", 'Message');
                @else
                toastr.info("{!! session()->get('flash_message') !!}", 'Message');
                @endif
            }, 500);
        </script>
    @endpush
@endif
